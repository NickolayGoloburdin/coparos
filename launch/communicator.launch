<launch>
<arg name="takeoff_height" default="100"/>
<arg name="node_start_delay" default="0.0" />
<param name="takeoff_height" value="$(arg takeoff_height)" />
  <node name="coparos_services_handler" pkg="coparos" type="coparos_services_node" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' "/>
  <remap from="/mavros/Imu/data" to="/imu"/>
  <remap from="/mavros/global_position/global" to="/gps"/>
  <remap from="/mavros/global_position/rel_alt" to="/baro"/>

  <node name="coparos_measure_wind_service_node" pkg="coparos" type="coparos_measure_wind_service_node" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' "/>
  
</launch>